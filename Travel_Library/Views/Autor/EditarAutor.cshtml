@model Autor
@{
    ViewData["Title"] = "Editar Autor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5">
    <div class="text-center">
        <h1 class="display-4">Editar Autor</h1>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-6 col-xl-6 col-md-6">
            <div class="card">
                <div class="card-header">
                    <strong>Editar Autor</strong>
                </div>
                <div class="card-body">
                    <form asp-controller="Autor" asp-action="EditarAutor" method="post">
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="Nombre" placeholder="Nombre" name="Nombre" asp-for="Nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="Apellidos" class="form-label">Apellidos</label>
                            <input type="text" class="form-control" id="Apellidos" name="Apellidos" asp-for="Apellidos" placeholder="Apellidos" required>
                        </div>
                        @*<input type="hidden" id="EditorialId" name="EditorialId" asp-for="EditorialId" />*@
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Editar Autor</button>
                            <a class="btn btn-dark" asp-action="Index">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

