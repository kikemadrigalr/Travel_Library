@model Editorial
@{
    ViewData["Title"] = "Eliminar Editorial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 pt-5">
    <div class="text-center">
        <h1 class="display-4">Eliminar Editorial</h1>
    </div>
    <hr />
    <div class="text-center">
        <h3 class="text-danger">¿Está seguro de Eliminar esta Editorial?</h3>
    </div>

    <div class="row justify-content-center">
        <div class="col-6 col-xl-6 col-md-6">
            <div class="card">
                <div class="card-header">
                    <strong>Eliminar Editorial</strong>
                </div>
                <div class="card-body">
                    <form asp-controller="Editorial" asp-action="EliminarEditorial" method="post">
                        <div class="mb-3">
                            <label for="Id" class="form-label">Id</label>
                            <input type="text" class="form-control" id="Id" name="Id" asp-for="Id" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="Nombre" name="Nombre" asp-for="Nombre" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="Sede" class="form-label">Sede</label>
                            <input type="text" class="form-control" id="Sede" name="Sede" asp-for="Sede" disabled>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-danger" type="submit">Eliminar Editorial</button>
                            <a class="btn btn-warning" asp-action="Index">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

